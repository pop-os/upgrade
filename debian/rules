#!/usr/bin/make -f

export HOME = .cargo/home

export VENDORED ?= 1
CLEAN ?= 1

%:
	dh $@ --with=systemd

override_dh_auto_clean:
ifeq ($(CLEAN),1)
	make clean
endif
ifeq ($(VENDORED),1)
	if ! ischroot; then \
		make vendor; \
	fi
endif

override_dh_installinit:
	dh_installinit -r

override_dh_systemd_start:
	dh_systemd_start -r
